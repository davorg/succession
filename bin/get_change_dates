#!/usr/bin/perl -CS

use strict;
use warnings;
use 5.010;

use Succession::App;

my $app  = Succession::App->new;
my $date = $app->earliest;

my %prev_succ = ();
while ($date <= $date->today ) {
  my %succ = map { $_->id => 1 } @{ $app->succession };
  $#succ = 19 if @succ > 20;
  $date->add(days => 1);
}

