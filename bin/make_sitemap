#!/usr/bin/perl

use strict;
use warnings;
use diagnostics;

chomp (my @dates = <>);

pop @dates;

print <<EOXML;
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
EOXML

for (@dates, '') {
  print <<EOXML;
   <url>
      <loc>https://lineofsuccession.co.uk/$_</loc>
   </url>
EOXML
}

print "</urlset>\n";
